---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: APP-NAME 
---
kind: Role
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: APP-NAME
rules:
  - apiGroups:
      - "batch"
    resources:
      - jobs/status
    verbs:
      - get
      - list
      - patch
  - apiGroups:	
      - ""	
    resources:	
      - pods	
    verbs:	
      - get	
      - list
---
kind: RoleBinding
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: APP-NAME
subjects:
  - kind: ServiceAccount
    name: APP-NS
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: Role
  name: APP-NAME
